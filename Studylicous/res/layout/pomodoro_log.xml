<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@drawable/pomodoro_page_background_vertical">
<EditText
    android:layout_width="250dp" android:layout_height="wrap_content"
    android:layout_gravity="center" android:layout_marginTop="120dp"
    android:hint="Pomodoro name"
    android:gravity="center"
    />
    <EditText
        android:layout_width="250dp" android:layout_height="wrap_content"
        android:layout_gravity="center" android:layout_marginTop="30dp"
        android:hint="Work sessions"
        android:gravity="center"
        />
    <EditText
        android:layout_width="250dp" android:layout_height="wrap_content"
        android:layout_gravity="center" android:layout_marginTop="30dp"
        android:hint="Set Pomodoro time"
        android:gravity="center"
        />
</LinearLayout>